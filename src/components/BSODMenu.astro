<style>
  .bsod-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--bsod-blue);
    z-index: 100;
    opacity: 0;
    animation: fade-in 0.1s steps(2, jump-start) forwards;
  }

  @keyframes fade-in {
    to {
      opacity: 1;
    }
  }

  .bsod-content {
    /* Use viewport units for responsive sizing */
    padding: 1.5vh 3vw;
    padding-left: 4vw;
    text-align: left;
    max-width: none;
    height: 100vh;
    overflow: hidden; /* NO SCROLLING */
    display: flex;
    flex-direction: column;
    justify-content: center;
    font-size: clamp(8px, 1.3vw, 13px);
    line-height: 1.1;
  }

  .bsod-header p,
  .bsod-technical p,
  .bsod-separator p,
  .bsod-footer p {
    margin: 0;
    line-height: 1.1;
    font-weight: 700;
  }

  .bsod-header {
    margin-bottom: 0.5vh;
  }

  .bsod-technical {
    margin: 0.5vh 0;
  }

  .bsod-separator {
    margin: 0.5vh 0;
  }

  /* Responsive delimiter using CSS */
  .delimiter {
    overflow: hidden;
    white-space: nowrap;
  }

  .delimiter::before {
    content: '===================================================================================';
    display: block;
    overflow: hidden;
    text-overflow: clip;
  }

  .menu {
    margin: 0.5vh 0;
  }

  .menu-item {
    padding: 0.2vh 0;
    margin: 0.1vh 0;
    cursor: pointer;
    position: relative;
    outline: none;
    display: block;
    font-weight: 700;
  }

  .menu-item:hover,
  .menu-item:focus,
  .menu-item.selected {
    background: var(--bsod-text);
    color: var(--bsod-blue);
  }

  .menu-arrow {
    display: inline-block;
    width: 15px;
    margin-right: 5px;
  }

  .menu-item:not(.selected) .menu-arrow {
    opacity: 0;
  }

  .menu-item.selected .menu-arrow {
    opacity: 1;
  }

  .bsod-footer {
    margin-top: 0.5vh;
  }

  .help-text {
    color: var(--bsod-gray);
    font-size: clamp(9px, 1.2vw, 13px);
    font-weight: 700;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .bsod-content {
      padding: 2vh 4vw;
      padding-left: 5vw;
      font-size: clamp(9px, 2vw, 13px);
    }

    .menu-item {
      padding: 0.5vh 0;
      touch-action: manipulation;
    }

    .help-text {
      font-size: clamp(8px, 1.5vw, 11px);
    }

    .delimiter::before {
      content: '============================================================';
    }
  }

  @media (max-width: 480px) {
    .bsod-content {
      padding: 1.5vh 3vw;
      padding-left: 4vw;
      font-size: clamp(8px, 2.2vw, 11px);
      line-height: 1.1;
    }

    .bsod-header p,
    .bsod-technical p,
    .bsod-separator p,
    .bsod-footer p {
      line-height: 1.1;
    }

    .help-text {
      font-size: clamp(7px, 1.8vw, 9px);
    }

    .delimiter::before {
      content: '========================================';
    }
  }

  /* Landscape mobile - super compact */
  @media (max-height: 500px) {
    .bsod-content {
      padding: 1vh 2vw;
      font-size: clamp(7px, 1.4vw, 10px);
      line-height: 1.05;
    }

    .bsod-header,
    .bsod-technical,
    .bsod-separator,
    .menu,
    .bsod-footer {
      margin: 0.3vh 0;
    }

    .menu-item {
      padding: 0.2vh 0;
      margin: 0.1vh 0;
    }
  }
</style>

