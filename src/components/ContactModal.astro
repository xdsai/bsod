<style>
  .contact-section p {
    margin: 0;
    line-height: 1.25;
    font-weight: 700;
    font-size: 13px;
  }

  .contact-section strong {
    font-weight: 900;
    color: var(--bsod-text);
  }

  .contact-link {
    color: var(--bsod-text);
    text-decoration: none;
    border-bottom: 1px solid var(--bsod-text);
    font-weight: 700;
  }

  .contact-link:hover {
    background: var(--bsod-text);
    color: var(--bsod-blue);
    text-shadow: none;
  }
</style>
